{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "x64-windows",
            "displayName": "x64(msvc)",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build-x64-windows",
            "installDir": "${sourceDir}/install",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "BUILD_TESTING": true,
                "BUILD_SHARED_LIBS": true,
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_SYSTEM_VERSION": "10.0.22000.0",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "debug": {
                "output": false,
                "find": false,
                "tryCompile": false
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64"
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-clangcl",
            "displayName": "x64(clang-cl)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-x64-clangcl",
            "installDir": "${sourceDir}/install",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "BUILD_TESTING": true,
                "BUILD_SHARED_LIBS": true,
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_CXX_FLAGS": "-m64 /EHsc",
                "CMAKE_LINKER": "lld-link",
                "CMAKE_EXE_LINKER_FLAGS_INIT": "/machine:x64 /entry:main",
                "CMAKE_SYSTEM_VERSION": "$env{SDK}",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "environment": {
                "SDK": "10.0.22000.0",
                "//LDFLAGS": "/winsdkdir:$env{SDK}",
                "MT_PATH": "C:/Program Files (x86)/Windows Kits/10/bin/$env{SDK}/x64",
                "PATH": "$env{MT_PATH};$penv{PATH}"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            },
            "debug": {
                "output": false,
                "tryCompile": false
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-windows-debug",
            "configurePreset": "x64-windows",
            "configuration": "Debug"
        },
        {
            "name": "x64-windows-release",
            "configurePreset": "x64-windows",
            "configuration": "Release"
        },
        {
            "name": "x64-clangcl-debug",
            "configurePreset": "x64-clangcl",
            "configuration": "Debug"
        },
        {
            "name": "x64-clangcl-release",
            "configurePreset": "x64-clangcl",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "x64-windows-debug",
            "configurePreset": "x64-windows",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "x64-clangcl-debug",
            "configurePreset": "x64-clangcl",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}